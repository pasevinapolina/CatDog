<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/color_red</item>
        <item name="tabIndicatorHeight">@dimen/tabs_indicator_height</item>
        <item name="tabPaddingStart">@dimen/space_normal</item>
        <item name="tabPaddingEnd">@dimen/space_normal</item>
        <item name="tabBackground">@color/color_blue_dark</item>
        <item name="tabTextAppearance">@style/AppTheme.TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/color_white</item>
    </style>

    <style name="AppTheme.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/color_gray_light</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>
